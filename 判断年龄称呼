public class Test {
	public static void main(String[] args) {
		int child = 18;//低于18
		int youth = 28;//19-28
		int middleAged = 55;//29-55
		int myAge = 56;
		//小于18
		if(myAge <= child) {
			System.out.println("少年");
		} else if(myAge > child && myAge <= youth) {//大于18小于28
			System.out.println("青年");
		} else if(myAge > youth && myAge <= middleAged) {//大于28小于55
			System.out.println("中年");
		} else {                                        //大于55
			System.out.println("老年");
		}
	}
}
